---
import Card from '../components/ui/Card.astro';
import { Image, Picture } from 'astro:assets';
import video from '../media/ada/disco.mp4';
import poster from '../media/ada/disco-poster.png';
---

<Card rowStart="lg:row-start-3" justify='between'>

  <div slot="content">
    <h3 class="text-2xl">
      Disco<sup class="text-sm">FM</sup> iOs app
    </h3>
    <p class="mt-2">
      A quick showcase of the restyling i made in a more native iOs UI guise
    </p>
  </div>

  <div slot="more" class="-mx-4 -mb-4">
    <video
      poster={poster.src}
      src={video}
      class="media"
      autoplay
      muted
      loop
    ></video>
  </div>

</Card>
