---
import Card from '../components/card/Card.astro';
import { Image, Picture } from 'astro:assets';
import video from '../media/ada/disco.mp4';
import poster from '../media/ada/disco-poster.png';
---

<Card
    rowStart="lg:row-start-3" 
    justify='between'
>

  <div slot="content">
    <h3
      class="text-xl lg:text-2xl tracking-tight font-medium text-primary dark:text-white"
    >
      Disco<sup class="text-sm">FM</sup> iOs app
    </h3>
    <p class="mt-2 text-sm text-zinc-500 dark:text-zinc-400 font-light">
      A quick showcase of the restyling i made in a more native iOs UI guise
    </p>
  </div>

  <div slot="more" class="-mx-4 -mb-4">
    <video
      poster={poster.src}
      src={video}
      class="rounded-2xl object-cover ring-1 w-full lg:h-auto dark:ring-white/10 ring-primary/5 bg-tertiary"
      autoplay
      muted
      loop
    ></video>
  </div>

</Card>
