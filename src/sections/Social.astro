---
import Card from "../components/ui/Card.astro"
---

<Card
  align="center"
  justify="between"
>

  <h2
    slot="trailing"
    class="text-xl font-medium tracking-tight text-primary dark:text-white lg:text-8xl"
  >
    Find me on
  </h2>

  <div slot="more"
    class="flex gap-4 justify-between w-full"
  >
    <!--Email-->
    <a
      href="mailto:luigipedata.design@gmail.com"
      class="flex items-center justify-center aspect-square shadow-xl dark:shadow-thick hover:bg-zinc-100 dark:hover:bg-custom-primary ring-1 bg-zinc-50 dark:ring-white/10 ring-primary/5 dark:bg-secondary rounded-lg hover:ring-primary/5 dark:hover:ring-white/20 duration-300 group transition-all h-12 w-12"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-mail h-6 w-6 group-hover:scale-125 duration-300 text-primary dark:text-white group-hover text-primary:dark:text-white/50"
        viewBox="0 0 24 24"
        stroke-width="0.8"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
        ></path><path d="M3 7l9 6l9 -6"></path></svg
      >
    </a>
    <!--LinkedIn-->
    <a
      href="https://www.linkedin.com/in/luigi-pedata-lpdsgn/"
      target="_blank"
      rel="me"
      class="flex items-center justify-center aspect-square shadow-xl dark:shadow-thick hover:bg-zinc-100 dark:hover:bg-custom-primary ring-1 bg-zinc-50 dark:ring-white/10 ring-primary/5 dark:bg-secondary rounded-lg hover:ring-primary/5 dark:hover:ring-white/20 duration-300 group transition-all h-12 w-12"
    >
