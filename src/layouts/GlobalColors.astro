---
const Color = {
  bkg: {
    light: 'bg-white',
    dark: 'dark:bg-secondary',
    hoverLight: 'hover:ring-primary/5',
    hoverDark: 'dark:hover:ring-white/20'
  },
  ring: {
    light: 'ring-primary/5 ring-zinc-400',
    dark: 'dark:ring-white/10 dark:ring-zinc-500',
    brd: '', // Sembra vuoto, quindi puoi ignorarlo se non necessario
    hoverLight: 'hover:ring-primary/5',
    hoverDark: 'dark:hover:ring-white/20'
  },
  shad: {
    light: 'shadow-xl shadow-md',
    dark: 'dark:shadow-thick'
  },
  text: {
    light: 'text-primary text-zinc-500',
    dark: 'dark:text-white dark:text-zinc-400',
    special: 'line-through opacity-35'
  }
};

// Concatenate all classes into a single string for each main property
const Colors = {
  bkg: `${Color.bkg.light} ${Color.bkg.dark} ${Color.bkg.hoverLight} ${Color.bkg.hoverDark}`,
  ring: `${Color.ring.light} ${Color.ring.dark} ${Color.ring.brd} ${Color.ring.hoverLight} ${Color.ring.hoverDark}`,
  shad: `${Color.shad.light} ${Color.shad.dark}`,
  text: `${Color.text.light} ${Color.text.dark} ${Color.text.special}`
};

export { Color, Colors };
